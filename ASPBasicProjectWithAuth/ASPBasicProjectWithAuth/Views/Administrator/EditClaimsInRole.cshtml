@model RoleClaimsViewModel

@{
    var roleId = ViewBag.roleId;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage User Claims For Role</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.RoleClaims.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.RoleClaims[i].ClaimType" />
                    <input asp-for="@Model.RoleClaims[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model.RoleClaims[i].IsSelected">
                        @Model.RoleClaims[i].ClaimType
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary"
                   style="width:auto" />
            <a asp-action="EditRole" asp-route-id="@roleId"
               class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>